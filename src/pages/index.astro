---
import BaseLayout from '../layouts/BaseLayout.astro';

// Course structured data for the main page
const courseData = {
  "@context": "https://schema.org",
  "@type": "Course",
  "name": "Web Development Tutorials",
  "description": "Comprehensive web development tutorials covering HTML, CSS, JavaScript, and modern frameworks",
  "provider": {
    "@type": "Organization",
    "name": "Web Tutorials",
    "url": "https://yourdomain.com/tutorialwebsite/"
  },
  "courseMode": "online",
  "educationalLevel": "beginner",
  "inLanguage": "en-US",
  "isAccessibleForFree": true,
  "hasCourseInstance": [
    {
      "@type": "CourseInstance",
      "courseMode": "online",
      "instructor": {
        "@type": "Organization",
        "name": "Web Tutorials Team"
      }
    }
  ]
};
---

<BaseLayout title="Web Tutorials - Learn Web Development from Scratch" description="Master web development with our comprehensive tutorials. Learn HTML, CSS, JavaScript, React, Vue.js, and more with step-by-step guides and practical examples.">
  <!-- Course Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(courseData)}></script>
  
  <!-- Enhanced Meta Tags -->
  <meta name="keywords" content="web development, HTML tutorial, CSS tutorial, JavaScript tutorial, React tutorial, Vue.js tutorial, web programming, learn to code, programming tutorials, frontend development, backend development" />
  <meta name="author" content="Web Tutorials Team" />
  <meta name="robots" content="index, follow" />
  <meta name="language" content="en-US" />
  
  <!-- Open Graph for Home Page -->
  <meta property="og:title" content="Web Tutorials - Learn Web Development from Scratch" />
  <meta property="og:description" content="Master web development with our comprehensive tutorials. Learn HTML, CSS, JavaScript, React, Vue.js, and more with step-by-step guides and practical examples." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://yourdomain.com/tutorialwebsite/" />
  <meta property="og:site_name" content="Web Tutorials" />
  
  <!-- Twitter Card for Home Page -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Web Tutorials - Learn Web Development from Scratch" />
  <meta name="twitter:description" content="Master web development with our comprehensive tutorials. Learn HTML, CSS, JavaScript, React, Vue.js, and more with step-by-step guides and practical examples." />
  
  <!-- Canonical URL -->
  <link rel="canonical" href="https://yourdomain.com/tutorialwebsite/" />
  <div class="container">
    <!-- Welcome section -->
    <section class="welcome">
      <h2>Welcome to Web Tutorials</h2>
      <p class="welcome-text">
        Learn web development from the ground up! Our comprehensive collection of tutorials covers 
        HTML, CSS, and JavaScript with clear explanations and practical examples. Whether you're a 
        complete beginner or looking to refresh your skills, we've got you covered with thousands 
        of articles to help you master web development.
      </p>
      
      <!-- Web Development -->
      <div class="category-section">
        <h3 class="category-section-title">Web Development</h3>
        <div class="category-grid">
          <div class="category-card">
            <div class="category-icon">
              <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/html5/html5-original.svg" alt="HTML5 Logo" width="48" height="48" />
            </div>
            <h3>HTML</h3>
            <p>Master the structure and markup language of the web. Learn how to create semantic, accessible web pages.</p>
            <div class="category-stats">
              <span class="article-count">1,200+ Articles</span>
              <span class="difficulty">Beginner to Advanced</span>
            </div>
            <a href="/tutorialwebsite/html/" class="btn">Browse HTML Tutorials</a>
          </div>
          
          <div class="category-card">
            <div class="category-icon">
              <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/css3/css3-original.svg" alt="CSS3 Logo" width="48" height="48" />
            </div>
            <h3>CSS</h3>
            <p>Style your web pages with CSS. Learn layouts, animations, responsive design, and modern CSS techniques.</p>
            <div class="category-stats">
              <span class="article-count">1,500+ Articles</span>
              <span class="difficulty">Beginner to Advanced</span>
            </div>
            <a href="/tutorialwebsite/css/" class="btn">Browse CSS Tutorials</a>
          </div>
          
          <div class="category-card">
            <div class="category-icon">
              <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg" alt="JavaScript Logo" width="48" height="48" />
            </div>
            <h3>JavaScript</h3>
            <p>Add interactivity and dynamic behavior to your websites. From basics to advanced frameworks and libraries.</p>
            <div class="category-stats">
              <span class="article-count">2,000+ Articles</span>
              <span class="difficulty">Beginner to Advanced</span>
            </div>
            <a href="/tutorialwebsite/javascript/" class="btn">Browse JavaScript Tutorials</a>
          </div>
        </div>
      </div>

      <!-- Frontend Frameworks -->
      <div class="category-section">
        <h3 class="category-section-title">Frontend Frameworks</h3>
        <div class="category-grid">
          <div class="category-card">
            <div class="category-icon">
