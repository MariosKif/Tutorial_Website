---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Register - Web Tutorials" description="Join Web Tutorials and start your web development journey today! Create your account to access thousands of tutorials.">
  <div class="container">
    <div class="auth-container">
      <div class="auth-card">
        <h2>Join Web Tutorials</h2>
        <p>Create your account and start your web development journey today!</p>
        
        <form class="auth-form">
          <div class="form-row">
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input type="text" id="firstName" name="firstName" required>
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input type="text" id="lastName" name="lastName" required>
            </div>
          </div>
          
          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" required>
          </div>
          
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
            <small class="form-help">Must be at least 8 characters long</small>
          </div>
          
          <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
          </div>
          
          <div class="form-group">
            <label class="checkbox-label">
              <input type="checkbox" name="terms" required>
              <span>I agree to the <a href="#" class="terms-link">Terms of Service</a> and <a href="#" class="terms-link">Privacy Policy</a></span>
            </label>
          </div>
          
          <div class="form-group">
            <label class="checkbox-label">
              <input type="checkbox" name="newsletter">
              <span>Subscribe to our newsletter for web development tips and updates</span>
            </label>
          </div>
          
          <button type="submit" class="btn btn-primary">Create Account</button>
        </form>
        
        <div class="auth-divider">
          <span>or</span>
        </div>
        
        <div class="social-login">
          <button class="btn btn-social btn-google">
            <span>üîç</span> Continue with Google
          </button>
          <button class="btn btn-social btn-github">
            <span>üêô</span> Continue with GitHub
          </button>
        </div>
        
        <div class="auth-footer">
          <p>Already have an account? <a href="/login/">Sign in here</a></p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
