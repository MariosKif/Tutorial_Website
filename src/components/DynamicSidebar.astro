---
import { getCollection } from 'astro:content';

// Get all collections
const htmlTutorials = await getCollection('external-html-tutorials');
const cssTutorials = await getCollection('css-tutorials');
const jsTutorials = await getCollection('javascript-tutorials');

// Get current URL path to determine which course we're in
const currentPath = Astro.url.pathname;
const isHtmlCourse = currentPath.startsWith('/html');
const isCssCourse = currentPath.startsWith('/css');
const isJsCourse = currentPath.startsWith('/javascript');

// Get the appropriate tutorials based on current course
let currentTutorials = [];
let currentCourseName = '';
let currentCourseIcon = '';
let currentCourseColor = '';

if (isHtmlCourse) {
  currentTutorials = htmlTutorials.filter(tutorial => tutorial.data.published);
  currentCourseName = 'HTML';
  currentCourseIcon = 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/html5/html5-original.svg';
  currentCourseColor = '#e34c26';
} else if (isCssCourse) {
  currentTutorials = cssTutorials.filter(tutorial => tutorial.data.published);
  currentCourseName = 'CSS';
  currentCourseIcon = 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/css3/css3-original.svg';
  currentCourseColor = '#1572b6';
} else if (isJsCourse) {
  currentTutorials = jsTutorials.filter(tutorial => tutorial.data.published);
  currentCourseName = 'JavaScript';
  currentCourseIcon = 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg';
  currentCourseColor = '#f7df1e';
}
---

<!-- Dynamic Sidebar -->
<aside class="sidebar" id="sidebar">
  {isHtmlCourse || isCssCourse || isJsCourse ? (
    <!-- Course-specific sidebar -->
    <div class="sidebar-header">
      <div class="course-header">
        <img src={currentCourseIcon} alt={`${currentCourseName} Logo`} class="course-logo" style={`background-color: ${currentCourseColor}`}>
        <h2>{currentCourseName} Tutorials</h2>
      </div>
      <p class="course-count">{currentTutorials.length} tutorials available</p>
    </div>
    
    <nav class="sidebar-nav">
      <div class="sidebar-section">
        <div class="sidebar-section-title">
          <span class="section-title-text">üìö Tutorial List</span>
        </div>
        <ul class="sidebar-menu course-tutorials">
          {currentTutorials.map((tutorial) => (
            <li>
              <a href={`/${currentCourseName.toLowerCase()}/${tutorial.slug}/`} class="sidebar-link tutorial-link">
                <span class="tutorial-title">{tutorial.data.title}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="sidebar-section">
        <a href="/" class="sidebar-link back-link">
          <span class="back-icon">‚Üê</span>
          Back to All Courses
        </a>
      </div>
    </nav>
  ) : (
