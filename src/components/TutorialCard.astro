---
export interface Props {
  title: string;
  description: string;
  difficulty: 'beginner' | 'intermediate' | 'advanced';
  readTime: string;
  slug: string;
  category?: string;
}

const { title, description, difficulty, readTime, slug, category } = Astro.props;

// Difficulty color mapping
const difficultyColors = {
  beginner: {
    bg: '#d4edda',
    text: '#155724'
  },
  intermediate: {
    bg: '#fff3cd',
    text: '#856404'
  },
  advanced: {
    bg: '#f8d7da',
    text: '#721c24'
  }
};

const difficultyStyle = difficultyColors[difficulty];
---

<div class="tutorial-card" data-difficulty={difficulty} data-category={category}>
  <h3>
    <a href={slug}>{title}</a>
  </h3>
  <p>{description}</p>
  <div class="tutorial-meta">
    <span 
      class="tutorial-difficulty" 
      style={`background-color: ${difficultyStyle.bg}; color: ${difficultyStyle.text};`}
    >
      {difficulty.charAt(0).toUpperCase() + difficulty.slice(1)}
    </span>
    <span class="tutorial-read-time">{readTime}</span>
  </div>
</div>

<style>
  .tutorial-card {
    background: var(--bg-secondary);
    border-radius: 12px;
    box-shadow: 0 3px 10px var(--shadow);
    transition: all 0.3s ease;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 270px;
    min-height: 270px;
    max-height: 270px;
    width: 100%;
    max-width: 353px;
    border: 1px solid var(--border-color);
    box-sizing: border-box;
    position: relative;
  }


  .tutorial-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px var(--shadow);
    border-color: var(--accent-primary);
  }

  .tutorial-card h3 {
    padding: 1rem 1rem 0.75rem;
    color: var(--accent-primary);
    font-size: 1.2rem;
    margin: 0;
    flex-shrink: 0;
    line-height: 1.3;
  }

  .tutorial-card h3 a {
    color: inherit;
    text-decoration: none;
    display: block;
    transition: color 0.3s ease;
  }

  .tutorial-card h3 a:hover {
    color: var(--accent-secondary);
  }

  .tutorial-card p {
    padding: 0 1rem 2.5rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0;
    flex-grow: 1;
    line-height: 1.5;
  }

  .tutorial-meta {
    padding: 1rem 1rem;
    background-color: var(--bg-primary);
    border-top: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    color: var(--text-secondary);
    height: 2.5rem;
    min-height: 2.5rem;
    max-height: 2.5rem;
    margin-top: auto;
    flex-shrink: 0;
    width: 100%;
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
  }

  .tutorial-meta span {
    display: flex;
    align-items: center;
    font-size: 0.8rem;
    line-height: 1;
    height: 1.6rem;
    flex-shrink: 0;
  }

  .tutorial-meta span:first-child {
    flex: 0 0 auto;
  }

  .tutorial-meta span:last-child {
    flex: 0 0 auto;
    margin-left: auto;
  }

  .tutorial-difficulty {
    padding: 0.3rem 0.6rem;
    border-radius: 12px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
    white-space: nowrap;
    min-width: 70px;
    max-width: 70px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    position: relative;
  }

  .tutorial-read-time {
    color: var(--text-secondary);
    font-size: 0.8rem;
    flex-shrink: 0;
    white-space: nowrap;
    position: relative;
  }


  /* Responsive adjustments */
  @media (max-width: 1200px) {
    .tutorial-card {
      max-width: 331px;
    }
  }

  @media (max-width: 768px) {
    .tutorial-card {
      height: 252px;
      min-height: 252px;
      max-height: 252px;
      max-width: 310px;
    }
    
    .tutorial-card h3 {
      padding: 1rem 1rem 0.5rem;
      font-size: 1.1rem;
    }
    
    .tutorial-card p {
      padding: 0 1rem 2.25rem;
      font-size: 0.85rem;
    }
    
    .tutorial-meta {
      padding: 0.75rem 1rem;
      height: 2.25rem;
      min-height: 2.25rem;
      max-height: 2.25rem;
    }
    
  }
</style>
