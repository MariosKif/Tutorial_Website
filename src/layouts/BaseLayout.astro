          <a href="/tutorialwebsite/login/" class="nav-link">Login</a>
          <a href="/tutorialwebsite/register/" class="nav-link">Register</a>
        </div>
      </nav>
    </div>
  </header>

  <!-- Main layout with sidebar and content -->
  <div class="main-layout">
    <!-- Main content area -->
    <main class="main-content">
      <slot />
    </main>
  </div>
  
  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <p>&copy; 2024 Web Tutorials. Learn web development step by step.</p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="/tutorialwebsite/script.js" is:inline></script>
